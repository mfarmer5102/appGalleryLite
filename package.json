{
  "name": "appgallerylite",
  "productName": "App Gallery Lite",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://cafeamericano.github.io/appGalleryLite/",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.1",
    "@testing-library/user-event": "^7.2.1",
    "dotenv": "^8.2.0",
    "gh-pages": "^2.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0"
  },
  "main": "Main.js",
  "scripts": {
    "start": "react-scripts start",
    "start-electron": "electron .",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "postinstall": "install-app-deps",
    "start-electron-build": "npm install && electron ./app",
    "pack": "build --dir",
    "dist": "build",
    "build-osx": "electron-packager ./ AppGalleryLite --platform=darwin --icon=/Users/matthew-dev/Desktop/icon.icns --overwrite",
    "build-windows": "electron-packager ./ AppGalleryLite --platform=win32 --icon=/Users/matthew-dev/Desktop/icon.ico --overwrite"
  },
  "build": {
    "mac": {
        "target": "dmg",
        "icon": "build/icon.png"
    },
    "productName": "App Gallery Lite",
    "icon": "build/icon.png",
    "appId": "yourappid",
    "files": [
        "/*",
        "build/icon.png"
    ],
    "category": "your.app.category.type",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "electron-packager": "^14.2.1"
  }
}
